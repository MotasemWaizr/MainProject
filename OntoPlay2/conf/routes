# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Module routes
GET /individual controllers.Constraints.individual(conditionId : Int, classUri: String)
GET /individual/getPropertyCondition controllers.Individuals.getPropertyCondition(conditionId: Integer, classUri: String, propertyUri: String)

# Javascript routing
GET    /assets/javascripts/routes      controllers.Constraints.javascriptRoutes()

# Sample routes
GET /samples/PizzaSample			controllers.samples.PizzaSample.index()
POST /samples/PizzaSample/updateConditions			controllers.samples.PizzaSample.updateConditions()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
